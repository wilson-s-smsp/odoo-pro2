<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_asset_item_form" model="ir.ui.view">
            <field name="name">asset.item.form</field>
            <field name="model">asset.item</field>
            <field name="arch" type="xml">
                <form string="Item Aset">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_loans"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-list"
                                    invisible="loan_count == 0">
                                <field name="loan_count" widget="statinfo" string="Peminjaman"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}"/>


                        <group>
                            <group>
                                <field name="serial_number"/>
                                <field name="is_available" widget="boolean_toggle"/>
                            </group>
                            <group>
                            </group>
                        </group>

                        <notebook>
                            <page string="Informasi Dasar" name="basic_info">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>

                            <page string="Detail Teknis" name="technical_details">
                                <group>
                                    <field name="manufacturer" invisible="is_available == False"/>
                                    <field name="purchase_date"/>
                                    <field name="warranty_end_date"/>
                                </group>
                            </page>

                            <page string="Riwayat Peminjaman" name="loan_history">
                                <field name="loan_ids">
                                    <tree>
                                        <field name="borrower_name"/>
                                        <field name="borrow_date"/>
                                        <field name="actual_return_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        </sheet>
                </form>
            </field>
        </record>

        <record id="view_asset_item_tree" model="ir.ui.view">
            <field name="name">asset.item.tree</field>
            <field name="model">asset.item</field>
            <field name="arch" type="xml">
                <tree string="Daftar Aset">
                    <field name="name"/>
                    <field name="serial_number"/>
                    <field name="is_available" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_asset_item_search" model="ir.ui.view">
            <field name="name">asset.item.search</field>
            <field name="model">asset.item</field>
            <field name="arch" type="xml">
                <search string="Cari Aset">
                    <field name="name"/>
                    <field name="serial_number"/>
                    <filter string="Tersedia" name="available" domain="[('is_available', '=', True)]"/>
                    <filter string="Tidak Tersedia" name="not_available" domain="[('is_available', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_asset_item" model="ir.actions.act_window">
            <field name="name">Aset Kantor</field>
            <field name="res_model">asset.item</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat Aset Kantor Baru
                </p>
                <p>
                    Kelola inventaris aset yang bisa dipinjamkan di kantor Anda.
                </p>
            </field>
        </record>

        <record id="view_asset_item_kanban" model="ir.ui.view">
            <field name="name">asset.item.kanban</field>
            <field name="model">asset.item</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="serial_number"/>
                    <field name="is_available"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click asset_kanban_card">
                                <div class="asset_kanban_image">
                                    <img t-att-src="kanban_image('asset.item', 'image_1920', record.id.raw_value)" 
                                         alt="Asset Image" 
                                         class="asset_image"/>
                                    <!-- Status Badge -->
                                    <div class="asset_status_badge">
                                        <span t-if="record.is_available.raw_value" 
                                              class="badge badge-success">âœ“ Tersedia</span>
                                        <span t-else="" 
                                              class="badge badge-danger">âœ— Dipinjam</span>
                                    </div>
                                </div>
                                <div class="oe_kanban_details asset_kanban_content">
                                    <div class="asset_kanban_header">
                                        <strong class="o_kanban_record_title asset_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="asset_kanban_info">
                                        <div class="asset_serial">
                                            <i class="fa fa-barcode text-muted me-1"></i>
                                            <span class="text-muted"><field name="serial_number"/></span>
                                        </div>
                                    </div>
                                    <div class="asset_kanban_footer">
                                        <div class="asset_availability">
                                            <field name="is_available" widget="boolean_toggle"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>